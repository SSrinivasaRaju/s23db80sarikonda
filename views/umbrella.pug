extends layout

block content
  h1= title
  -let items = results
  div(class="container-fluid")
    div(class="row")
      each item,index in items
        div(class="col-sm-2",onClick=`buy(${index})`)
          p Umbrella_color:  #{item.Umbrella_color}
          p Umbrella_length:  #{item.Umbrella_length}
          p Umbrella_cost:  #{item.Umbrella_cost}
  script.
    function buy(N) {
      N=N+1;
      alert('You purchased item '+N);
    }
